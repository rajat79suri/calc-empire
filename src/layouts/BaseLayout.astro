---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  schema?: object;
  slug?: string;
  country?: string;
}

const { title, description, schema, slug = '', country = 'us' } = Astro.props;

const siteUrl = "https://calc-empire.com";
const canonicalURL = slug ? `${siteUrl}/${country}/${slug}` : `${siteUrl}/${country}`;

const regions = [
  { code: 'us', lang: 'en-US' },
  { code: 'uk', lang: 'en-GB' },
  { code: 'in', lang: 'en-IN' },
  { code: 'ae', lang: 'en-AE' }
];

const currentRegion = regions.find(r => r.code === country);
const htmlLang = currentRegion ? currentRegion.lang : 'en';
---

<!doctype html>
<html lang={htmlLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta name="referrer" content="no-referrer-when-downgrade" />
    <meta name="theme-color" content="#2563EB" />
    <meta name="robots" content="index, follow, max-image-preview:large" />

    {slug && regions.map(region => (
      <link 
        rel="alternate" 
        hreflang={region.lang} 
        href={`${siteUrl}/${region.code}/${slug}`} 
      />
    ))}
    {slug && <link rel="alternate" hreflang="x-default" href={`${siteUrl}/us/${slug}`} />}

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    {schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      if (theme === 'light') document.documentElement.classList.remove('dark');
      else document.documentElement.classList.add('dark');
      window.localStorage.setItem('theme', theme);
    </script>
  </head>

  <body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300 min-h-screen flex flex-col font-['Inter']">
    <header class="w-full border-b border-gray-100 dark:border-gray-800 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md sticky top-0 z-50">
      <div class="max-w-5xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="/" class="font-bold text-xl tracking-tight flex items-center gap-2">
          <span class="text-blue-600 dark:text-blue-400 text-2xl">âš¡</span> 
          <span>CalculatorHub</span>
        </a>
      </div>
    </header>
    <main class="flex-grow w-full max-w-5xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="w-full border-t border-gray-100 dark:border-gray-800 mt-12 bg-gray-50 dark:bg-gray-900/50">
      <div class="max-w-5xl mx-auto px-4 py-8 text-center text-sm text-gray-500 dark:text-gray-400">
        <p>&copy; {new Date().getFullYear()} CalculatorHub. Built for Speed.</p>
      </div>
    </footer>
  </body>
</html>